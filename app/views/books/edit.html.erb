<h1>Editing Book</h1>
<div class="error_message">
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local: true do |f| %>
  <div class="field">
    <%= f.label :name, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :name, "Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>