<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_show_path(book.id) %></td>
      <td><%= link_to "Edit", 'books/:id/edit' %></td>
      <td><%= link_to "Delete", 'books/:id' %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book, local: true do |f| %>
  <div class="field">
    <h4>タイトル</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>本文</h4>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>